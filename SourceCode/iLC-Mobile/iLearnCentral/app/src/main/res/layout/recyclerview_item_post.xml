<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/addon_container_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_item_recyclerview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_imageview"
            android:layout_width="@dimen/post_user_image_lw"
            android:layout_height="@dimen/post_user_image_lw"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <RelativeLayout
            android:id="@+id/timestamp_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/post_user_image_lw"
            android:layout_toEndOf="@id/user_imageview"
            android:layout_alignTop="@id/user_imageview"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp" >

            <TextView
                android:id="@+id/post_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/post_user_image_lw"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/date_textview"
                android:layout_alignParentStart="true"
                android:text="Title"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:text="Date"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/time_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date_textview"
                android:layout_alignRight="@+id/date_textview"
                android:text="Time"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/edit_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time_textview"
                android:layout_alignRight="@+id/time_textview"
                android:text="Edit"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/content_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_imageview"
            android:layout_alignStart="@id/user_imageview"
            android:layout_alignEnd="@+id/timestamp_layout"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/content_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/content_imageview"
            android:layout_alignStart="@+id/content_imageview"
            android:layout_alignEnd="@+id/timestamp_layout"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="10dp"
            android:text="Text Content/Description..." />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>